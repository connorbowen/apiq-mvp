# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/apiq_mvp"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Security Configuration
ENCRYPTION_KEY="your-32-character-encryption-key-here"
ENCRYPTION_MASTER_KEY="your-32-character-master-key-for-secrets-vault"
CORS_ORIGIN=http://localhost:3000
ADMIN_TOKEN="your-admin-token-here"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/apiq.log

# API Documentation Sync
API_DOC_SYNC_INTERVAL=86400000
API_DOC_SYNC_ENABLED=true

# OpenAPI Cache Configuration
OPENAPI_CACHE_TTL=3600
OPENAPI_CACHE_MAX_SIZE=100
OPENAPI_CACHE_MAX_SIZE_BYTES=52428800
OPENAPI_CACHE_COMPRESSION=true
OPENAPI_SLOW_SPEC_TIMEOUT=30000

# Test API Credentials (for development only)
STRIPE_TEST_SECRET_KEY="sk_test_your_stripe_test_key_here"

# SSO Provider Configuration
# Okta Configuration
OKTA_CLIENT_ID="your-okta-client-id"
OKTA_CLIENT_SECRET="your-okta-client-secret"
OKTA_ISSUER="https://your-domain.okta.com"

# Google Workspace Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft Azure AD Configuration
AZURE_AD_CLIENT_ID="your-azure-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-client-secret"
AZURE_AD_TENANT_ID="your-azure-tenant-id"

# GitHub OAuth2 Configuration (for testing)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Generic OIDC Configuration
OIDC_CLIENT_ID="your-oidc-client-id"
OIDC_CLIENT_SECRET="your-oidc-client-secret"
OIDC_ISSUER="https://your-oidc-provider.com"

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
